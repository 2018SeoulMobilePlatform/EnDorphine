<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background = "#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/search"/>

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft= "10dp"
            android:maxLines="1"
            android:layout_gravity="center"
            android:hint="Search"/>
    </LinearLayout>

    <TabHost
        android:id="@+id/tapHost_chatlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            
                <LinearLayout
                    android:id="@+id/content1_chatlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ListView
                            android:id="@+id/camp_chat_listview"
                            android:listSelector="#778899"
                            android:cacheColorHint="#778899"
                            android:dividerHeight="1dp"
                            android:divider="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:transcriptMode="alwaysScroll"/>
                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right"
                        android:layout_marginTop="220dp"
                        android:layout_marginRight="30dp"
                        >

                        <Button
                            android:id="@+id/make_chatlist_button"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:background="@drawable/rounded_button"
                            android:text="+"
                            android:textSize="30dp"
                            android:textColor="#fff" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content2_chatlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="600dp"
                        android:background="#FFC19E"
                        android:gravity="center"
                        android:padding="8dp"
                        android:text="TAB CONTENT 2" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ListView
                            android:id="@+id/my_chat_listview"
                            android:listSelector="#778899"
                            android:cacheColorHint="#778899"
                            android:dividerHeight="1dp"
                            android:divider="#000000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:transcriptMode="alwaysScroll"/>
                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </TabHost>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background = "#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:padding="5dp"
            android:src="@drawable/search"/>

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft= "10dp"
            android:maxLines="1"
            android:layout_gravity="center"
            android:hint="Search"/>
    </LinearLayout>

    <TabHost
        android:id="@+id/tabHost_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@+id/taps_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/chatlist1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffc916"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ListView
                            android:id="@+id/camp_chat_listview"
                            android:listSelector="#778899"
                            android:cacheColorHint="#778899"
                            android:dividerHeight="1dp"
                            android:divider="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:transcriptMode="alwaysScroll"/>
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/chatlist2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#da8200"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ListView
                            android:id="@+id/my_chat_listview"
                            android:listSelector="#778899"
                            android:cacheColorHint="#778899"
                            android:dividerHeight="1dp"
                            android:divider="#FFFFFF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:transcriptMode="alwaysScroll"/>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>


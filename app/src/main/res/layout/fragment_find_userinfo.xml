<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/camp_finduser"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Forgot Password?"
            android:textAlignment="center"
            android:layout_weight="1">
        </TextView>

        <EditText
            android:id="@+id/find_email"
            android:hint="Email Address"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:maxLines="1"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:background="@drawable/rounded_login"/>

        <EditText
            android:id="@+id/find_name2"
            android:hint="Name"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:maxLines="1"
            android:textColorHint="#FFFFFF"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_login"/>

        <EditText
            android:id="@+id/find_phone"
            android:hint="Phone Number"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:maxLines="1"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:layout_height="50dp"
            android:background="@drawable/rounded_login"/>

        <Button
            android:id="@+id/find_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:background="@drawable/rounded_login_button"
            android:text="CONFIRM Password"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>
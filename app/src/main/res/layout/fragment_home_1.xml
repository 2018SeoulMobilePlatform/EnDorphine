<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="endorphine.icampyou.HomeMenu.HomeFragment1"
    android:background="#FFFFFF">

    <ImageView android:id="@+id/animationImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/weather_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weather_icon"
            android:layout_centerInParent="true"
            android:textSize="40dp"
            android:textColor="#000000"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/current_temperature"
            android:layout_centerInParent="true"
            android:layout_below="@+id/weather_description"
            android:textSize="50dp"
            android:textColor="#000000"
            android:text=""/>


    </RelativeLayout>


    <kr.go.seoul.airquality.AirQualityTypeMini
        android:id="@+id/button_mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </kr.go.seoul.airquality.AirQualityTypeMini>

</RelativeLayout>

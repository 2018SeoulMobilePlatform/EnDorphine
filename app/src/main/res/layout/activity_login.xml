<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Login.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/camp_night">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:text="Welcome"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="10dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Lorem ipusm dolor sit amet, consecteur adipiscing elit."/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:text="Donec auctor neque sed pretium luctus."/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_login"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:hint="Email Address"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/rounded_login"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:hint="PassWord"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded_login_button"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="|"
            android:layout_marginLeft="10dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="10dp"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#FFFFFF"
            android:text="Register"
            android:textStyle="bold"
            android:textSize="25dp"/>
    </LinearLayout>

    <com.kakao.usermgmt.LoginButton
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>



</LinearLayout>
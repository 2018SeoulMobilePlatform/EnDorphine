<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExchangeMenu.Chat_Content"
    android:orientation="vertical"
    android:id="@+id/chat_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center_horizontal"
            android:background="#FFFF"
            android:layout_marginTop="50dp"
            android:onClick="put_image"/>

        <Button
            android:id="@+id/select_img_btn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:text="Select Image"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:onClick="put_image"
            />

        <Spinner
            android:id="@+id/camp_combobox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/need"
            android:text="빌리고 싶은 물건"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <EditText
            android:width="250dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/write_need"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lettable"
            android:text="빌려줄 수 있는 물건"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <EditText
            android:width="250dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/write_lettable"
            android:textSize="15dp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/save_chat_content"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_login_button"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:text="Save"
        />
</LinearLayout>
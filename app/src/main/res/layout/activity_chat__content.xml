<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ExchangeMenu.Chat_Content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:src="@drawable/pot"
                android:foregroundGravity="center_vertical"
                android:background="@drawable/border"
                android:onClick="put_image" />

            <Button
                android:id="@+id/select_img_btn"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:onClick="put_image"
                android:text="이미지 선택"
                android:textSize="15dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="#캠핑장"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/camp_combobox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/border"/>

        <TextView
            android:id="@+id/need"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="#빌리고 싶은 물건"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/write_need"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:background="@drawable/border"
            android:gravity="top"
            android:hint="다른 사람에게 빌리고 싶은 물건이 있으신가요?"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/lettable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="#빌려줄 수 있는 물건"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/write_lettable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            android:gravity="top"
            android:hint="다른 사람에게 빌려줄 수 있는 물건이 있으신가요?"
            android:layout_weight="2"
            android:textSize="13dp" />

        <Button
            android:id="@+id/save_chat_content"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="채팅방 개설"
            android:textSize="15dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>